<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %logger(%F:%L)%n%highlight{%-5level} %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="ru.fix" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="ru.fix" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="ru.fix" level="ERROR" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.apache.zookeeper" level="WARN">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="org.apache.curator" level="WARN">
            <AppenderRef ref="console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>